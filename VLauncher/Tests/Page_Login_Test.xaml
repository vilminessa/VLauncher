<Page x:Class="VilmLauncher.Page_Login_Test"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VilmLauncher"
      
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="400"
      Title="Page_Login_Test">

    <Border VerticalAlignment="Center" Background="White" CornerRadius="45">
        <Border.Effect>
            <DropShadowEffect BlurRadius="10" Color="LightGray" ShadowDepth="0"/>
        </Border.Effect>
        <StackPanel Orientation="Vertical">
            <TextBlock Text="Registration" FontSize="30" FontWeight="Black" Margin="10 10 10 10" HorizontalAlignment="Center"/>
            
            <Grid HorizontalAlignment="Center" Width="150">
                <Button Content="Registration" HorizontalAlignment="Left" Margin="2"/>
                <Button Content="Login" HorizontalAlignment="Right" Margin="2"/>
            </Grid>
            
        </StackPanel>
    </Border>

</Page>
