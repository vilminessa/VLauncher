<Page x:Class="VLauncher.Page_MainPage_Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VLauncher"
      mc:Ignorable="d" 
      d:DesignHeight="1000" d:DesignWidth="1920"
      Title="Page_MainPage_Main">

    <Grid ShowGridLines="False" Background="Transparent">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/><ColumnDefinition/><ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/><RowDefinition/><RowDefinition/><RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Width="400" Height="500" Grid.Row="1" Grid.RowSpan="2" Grid.Column="1" Background="White">
            <TextBlock Text="Sign In" FontSize="20" FontWeight="Bold" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,10"/>
            <StackPanel Orientation="Vertical" Margin="50">
                <UniformGrid Rows="3">
                    <Button Content="Login" Height="40"/>
                    <Button Content="Password" Height="40"/>
                    <Button Content="Register" Height="20"/>
                </UniformGrid>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
